<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/header" />

            <ImageView
                android:id="@+id/mission"
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mission" />

            <ImageView
                android:id="@+id/guide1"
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/guide1" />

            <ImageView
                android:id="@+id/guide2"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/guide2" />

            <ImageView
                android:id="@+id/guide3"
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/guide3" />

            <ImageView
                android:id="@+id/guide4"
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/guide4" />

            <ImageView
                android:id="@+id/guide5"
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/guide5" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
